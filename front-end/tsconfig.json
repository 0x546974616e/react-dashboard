{
  "compilerOptions": {
    /// Completeness
    "skipLibCheck": true,

    /// Emit
    "noEmit": true,

    /// Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    /// JavaScript Support
    "allowJs": true,

    /// Language and Environment
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "target": "es5", // before: es2022

    /// Modules
    "baseUrl": "./src/", // create-react-app only supports `src`...
    "module": "esnext", // before: NodeNext
    "moduleResolution": "node", // before: NodeNext
    "resolveJsonModule": true,
    "rootDir": "./src", // Or "/"?

    /// Type Checking
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false, // false for convenientness
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false, // false for convenientness
    "noUnusedParameters": false, // false for convenientness
    "preserveConstEnums": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
  },

  "include": [
    "./src/**/*",
  ],

  "exclude": [
    "node_modules/",
  ],
}
